/* pages/home/home.wxss */

.article-card {
  border-bottom: 1px solid #efefef;
  padding: 16px 90px 16px 16px;
  background: white;
  position: relative;
}

.article-card-img {
  position: absolute;
  right: 16px;
  top: 16px;
  height: 68px;
  width: 68px;
}

image {
  width: 100%;
  height: 100%;
}

.btn-add {
  position: fixed;
  bottom: 20px;
  left: 50%;
  margin-left: -50px;
  font-size: 12px;
  background: #e8989a;
  color: white;
  width: 100px;
  border-radius: 50px;
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.1);
}
