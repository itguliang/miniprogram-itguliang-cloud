/* pages/categories/categories.wxss */
.category-add,.category-card{
  margin: 15px;
}
.category-card {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
  box-shadow: 0 6rpx 12rpx rgba(0, 0, 0, 0.1);
}

.category-card-opt {
  color: white;
  font-size: 12px;
  height: 100%;
  display: flex;
}

.category-card-opt-edit,.category-card-opt-del{
  height: 100%;
  display: flex;
  align-items: center;
  width:40px;
  justify-content: center;
}
.category-card-opt-edit {
  background: orange;
}
.category-card-opt-del {
  background: red;
}
